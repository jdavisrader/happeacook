.container
	.row
		h1
			= "#{@tag.name}"

	.row
		- @tag_recipes.each do |recipe|
			= link_to recipe, class: "col-lg-4 no-decoration"
				.recipe-box-container
					.recipe-name
						= "#{recipe.name}"

					.recipe-creator
						= "By "

						b.span.recipe-creator-name
							= "#{recipe.user.username}"

					.recipe-description
						= "#{recipe.description.truncate(120, separator: ' ')}"

		= paginate @tag_recipes, theme: 'bootstrap-5'
